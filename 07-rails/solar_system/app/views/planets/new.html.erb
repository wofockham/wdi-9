<h2>New Planet</h2>

<form action="/planets" method="post">
  <label for="name">Name:</label>
  <input type="text" id="name" name="planet[name]" placeholder="Earth">
  <label for="image">Image:</label>
  <input type="url" id="image" name="planet[image]">
  <label for="orbit">Orbit:</label>
  <input type="text" id="orbit" name="planet[orbit]">
  <label for="diameter">Diameter:</label>
  <input type="text" id="diameter" name="planet[diameter]">
  <label for="mass">Mass:</label>
  <input type="text" id="mass" name="planet[mass]">
  <label for="moons">Moons:</label>
  <input type="text" id="moons" name="planet[moons]">

  <button>Planet me</button>
</form>